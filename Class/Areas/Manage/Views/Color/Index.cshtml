@using Class.Models;
@model List<Colour>
@{
    int counter = 0;
}
<div style="display:flex">
    <h1>Create Colour</h1>
    <a asp-controller="color" asp-action="create" class="btn btn-primary ">Create</a>
</div>
<table class="table" style="overflow:scroll;max-width:1000px;">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="color" asp-action="update" asp-route-id="@item.Id" class="btn btn-primary">Update</a>
                    <a asp-controller="color" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</table>